<%- include("./layouts/head", {title: 'Category' }) %>
    <!--	Header	-->
    <%- include("./layouts/header.ejs") %>
        <!--	End Header	-->

        <!--	Body	-->
        <div id="body">
            <div class="container">
                <%- include("./layouts/menu.ejs") %>
                    <div class="row">
                        <div id="main" class="col-lg-8 col-md-12 col-sm-12">
                            <!--	Slider	-->
                            <%- include("./layouts/slider.ejs") %>
                                <!--	End Slider	-->

                                <!--	List Product	-->
                                <div class="products">
                                    <h3>
                                        <%= category.title %> (<%= totalProducts %> sản phẩm)
                                    </h3>
                                    <div class="product-list card-deck">
                                        <% for(let item of productCategory) { %>
                                            <%- include("./components/productItem", {item}) %>
                                                <% } %>
                                    </div>
                                </div>
                                <!--	End List Product	-->

                                <%- include("./components/pagination.ejs", { path, page }) %>

                        </div>

                        <%- include("./layouts/sidebar.ejs") %>

                    </div>
            </div>
        </div>
        <!--	End Body	-->

        <%- include("./layouts/footer.ejs") %>