<%- include('../layout/head', { title: "User" }) %>
    <%- include('../layout/header') %>
        <%- include('../layout/sidebar') %>

	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active">Danh sách thành viên</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Danh sách thành viên</h1>
			</div>
		</div><!--/.row-->
		<div id="toolbar" class="btn-group">
            <a href="#" class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i> Thêm thành viên
            </a>
        </div>
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
                        <table 
                            data-toolbar="#toolbar"
                            data-toggle="table">

						    <thead>
						    <tr>
						        <th data-field="id" data-sortable="true">ID</th>
						        <th data-field="name"  data-sortable="true">Họ & Tên</th>
                                <th data-field="price" data-sortable="true">Email</th>
                                <th>Quyền</th>
                                <th>Hành động</th>
						    </tr>
                            </thead>
                            <tbody>
                                <% for(i in users) { %>
                                    <tr>
                                        <td ><%= i + 1 %></td>
                                        <td><%= users[i].full_name %>></td>
                                        <td><%= users[i].email %></td>
                                        <td>
                                            <% if(users[i].role == 'admin'){ %>
                                            <span class="label label-danger">Admin</span>
                                            <% }else{ %> 
                                            <span class="label label-warning">Member</span>
                                            <% } %> 
                                        </td>
                                        <td class="form-group">
                                            <a href="thanhvien-edit.html" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a href="/" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
						</table>
                    </div>
                    <div class="panel-footer">
                        <%- include('../components/pagination.ejs', {path, pages, page, totalPages}) %>
                    </div>
				</div>
			</div>
		</div><!--/.row-->	
	</div>	<!--/.main-->

    <%- include('../layout/footer') %>
