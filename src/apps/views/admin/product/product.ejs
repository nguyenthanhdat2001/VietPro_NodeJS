<%- include('../layout/head', { title: "Products" }) %>
    <%- include('../layout/header') %>
        <%- include('../layout/sidebar') %>

            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="#"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li class="active">Danh sách sản phẩm</li>
                    </ol>
                </div>
                <!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Danh sách sản phẩm</h1>
                    </div>
                </div>
                <!--/.row-->
                <div id="toolbar" class="btn-group">
                    <a href="/admin/products/create" class="btn btn-success">
                        <i class="glyphicon glyphicon-plus"></i> Thêm sản phẩm
                    </a>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <table data-toolbar="#toolbar" data-toggle="table">

                                    <thead>
                                        <tr>
                                            <th data-field="id" data-sortable="true">ID</th>
                                            <th data-field="name" data-sortable="true">Tên sản phẩm</th>
                                            <th data-field="price" data-sortable="true">Giá</th>
                                            <th>Ảnh sản phẩm</th>
                                            <th>Trạng thái</th>
                                            <th>Danh mục</th>
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(product of products) { %>
                                            <tr>
                                                <td>1</td>
                                                <td>
                                                    <%= product.name %>
                                                </td>
                                                <td>
                                                    <%= product.price %>
                                                </td>
                                                <td style="text-align: center"><img width="130" height="180"
                                                        src="/public/images/<%= product.thumbnail %>" /></td>
                                                <td><span
                                                        class="label label-<%= product.is_stock ? 'success' : 'danger' %>">
                                                        <%= product.is_stock ? 'Còn hàng' : 'Hết hàng' %>
                                                    </span></td>
                                                <td>
                                                    <%= product.cat_id.title %>
                                                </td>
                                                <td class="form-group">
                                                    <a href="/admin/products/<%= product._id %>/edit"
                                                        class="btn btn-primary"><i
                                                            class="glyphicon glyphicon-pencil"></i></a>
                                                    <a href="/admin/products/<%= product._id %>/delete" class="btn btn-danger"><i
                                                            class="glyphicon glyphicon-remove"></i></a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="panel-footer">
                                <%- include('../components/pagination.ejs', {path, pages, page, totalPages}) %>
                            </div>
                        </div>
                    </div>
                </div><!--/.row-->
            </div> <!--/.main-->

            <%- include('../layout/footer') %>